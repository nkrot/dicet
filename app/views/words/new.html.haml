
- @title = "Add a new word"

%h2= @title

= form_for(@word) do |f|
  = render partial: 'shared/error_messages', locals: { item: @word }
  %br/
  = f.label :text, "Word"
  = f.text_field :text
  %br/
  = f.label :typo
  = f.text_field :typo
  %br/
  = f.label :comment
  = f.text_field :comment
  %br/
  = f.label :task
  = f.text_field :task_id
  %br/
  = f.submit "Add"
