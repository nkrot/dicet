- is_current = word.same?(@current_word)
- img_name = is_current ? 'bullet_star.png' : 'bullet_blue.png'

%div.word{class: ('active' if is_current) }
  = image_tag "#{img_name}"

  = link_to word.text, new_paradigm_path(:word_id => word)

  -# list of tags
  - if word.paradigm_id
    - each_word_with_link_to_paradigm_edit(word) do |wd, lnk|
      %div.tag
        = image_tag "#{select_bullet_image_for_tag(wd)}"
        != lnk
