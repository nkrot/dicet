
- @show_link_to_self = true
- @idx ||= 1 # any will do

%table#paradigm_page_layout
  %tr
    %td#leftpane
      &nbsp

    %td#main

      %h2= @title

      - if @current_word
        Current word:
        %span#current_word= @current_word.text
        = render partial: 'tokens/table_of_words', locals: {tokens: @current_words}
        %p

      %div.paradigms
        = render partial: 'paradigm_for_form', locals: { paradigm: @paradigm, idx: @idx, current_word: @current_word }

    %td#rightpane
      = render partial: 'tasks/task_in_sidepane'

